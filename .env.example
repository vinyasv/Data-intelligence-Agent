# =============================================================================
# Universal Web Scraper - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# API Keys (Required)
# =============================================================================

# Anthropic API Key (Required for all modes)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Exa API Key (Required for agent mode web search)
EXA_API_KEY=your-exa-api-key-here

# =============================================================================
# Claude Model Configuration
# =============================================================================

CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.0

# =============================================================================
# Agent Mode Configuration
# =============================================================================

AGENT_MODE=false
INTENT_MODEL=claude-3-5-haiku-20241022
MAX_CONVERSATION_HISTORY=20
WEB_SEARCH_MAX_RESULTS=5
EXA_SEARCH_TYPE=auto  # Options: auto, neural, keyword

# =============================================================================
# Browser Configuration
# =============================================================================

BROWSER_HEADLESS=true
BROWSER_TYPE=chromium  # Options: chromium, firefox, webkit
ENABLE_STEALTH=false  # Disabled due to playwright_stealth compatibility

# =============================================================================
# Bright Data Residential Proxy Configuration
# =============================================================================

# Enable/disable proxy usage
PROXY_ENABLED=false

# Bright Data Credentials
# Username format: customer-YOUR_CUSTOMER_ID-zone-ZONE_NAME
# Example: customer-hl_abc123-zone-residential
BRIGHTDATA_USERNAME=customer-YOUR_CUSTOMER_ID-zone-residential

# Your Bright Data password
BRIGHTDATA_PASSWORD=your-brightdata-password

# Bright Data proxy server (default values work for most cases)
BRIGHTDATA_HOST=zproxy.lum-superproxy.io
BRIGHTDATA_PORT=22225

# Proxy Rotation Strategy
# - "request": New IP for each request (automatic rotation)
# - "session": Sticky session (same IP for multiple requests)
PROXY_ROTATION=request

# =============================================================================
# Bright Data Web Unlocker Configuration (Parallel Race Extraction)
# =============================================================================
# Web Unlocker bypasses CAPTCHAs and bot detection automatically
# When enabled, runs in PARALLEL with Playwright+Proxies, uses whichever succeeds first

# Enable/disable Web Unlocker parallel race
UNLOCKER_ENABLED=false

# Web Unlocker API Token (get from Bright Data dashboard)
# Create a Web Unlocker zone and copy the API token
UNLOCKER_API_TOKEN=your-web-unlocker-api-token-here

# Web Unlocker Zone Name
# Example: web_unlocker1, unlocker_zone
UNLOCKER_ZONE=your-unlocker-zone-name

# Web Unlocker API Endpoint (default - don't change unless directed by Bright Data)
UNLOCKER_ENDPOINT=https://api.brightdata.com/request

# Web Unlocker request timeout (seconds)
UNLOCKER_TIMEOUT=120

# =============================================================================
# Performance Configuration
# =============================================================================

CHUNK_TOKEN_THRESHOLD=2000
WORD_COUNT_THRESHOLD=10

# =============================================================================
# Caching
# =============================================================================

CACHE_MODE=BYPASS  # Options: ENABLED, DISABLED, BYPASS
